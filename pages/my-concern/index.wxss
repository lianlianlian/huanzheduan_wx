/* pages/my-concern/index.wxss */
.list{
  margin-top: 20rpx;
  padding: 0 35rpx;
  background: #fff;
}
.item {
  padding: 30rpx 0;
}
.item image {
  width: 105rpx;
  height: 105rpx;
}
.item .infor {
  flex: 1;
  position: relative;
  margin-left: 30rpx;
}
.item .name {
  font-size: 18px;
  font-weight: bold;
}
.item .content {
  color: #828282;
  font-size: 13px;
}
.item .btn {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
  color: #adadad;
  font-size: 13px;
  background: #f6f6f6;
  width: 130rpx;
  border-radius: 60rpx;
  text-align: center;
  padding: 10rpx 0;
}