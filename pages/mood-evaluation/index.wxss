/* pages/mood-evaluation/index.wxss */
.mood-flow-nav{
  padding: 75rpx 60rpx;
  background: #fff;
}
.line{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
}
.line::after{
  content: "";
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  height: 1px;
  border-bottom: 1px dashed #c9c9c9;
  z-index: 0;
}
.mood-flow-nav .item {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  z-index: 10;
  background: #fff;
}
.mood-flow-nav .item text{
  line-height: 35rpx;
}
.mood-flow-nav .item.active{
  color: #fff;
  border: 1px solid #ff4445;
  background: #ff4445;
}

.mood-box{
  padding: 0 35rpx 35rpx;
  background: #fff;
}
.mood-box-title{
  padding: 20rpx 0;
  font-weight: bold;
  font-size: 18px;
}

.submit-box{
  margin: 50rpx 0;
  padding: 0 65rpx;
}