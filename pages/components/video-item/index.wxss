/* pages/components/video-item/index.wxss */
.item{
  padding: 0 5rpx;
}
.name {
  margin: 10rpx 0;
  font-size: 18px;
  font-weight: bold;
}
.video-box{
  position: relative;
}
.video-box image {
  width: 100%;
  height: 210rpx;
}
.time-box{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 5rpx 15rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 45rpx;
  color: #fff;
  font-size: 12px;
}
.time-box image{
  width: 31rpx;
  height: 31rpx;
  margin-right: 20rpx;
}
.flex{
  display: flex;
  align-items: center;
}
.d-o{
  display: -webkit-box;
  line-height: 60rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow:ellipsis;
}