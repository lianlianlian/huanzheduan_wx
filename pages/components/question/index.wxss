.number{
  display: flex;
  align-items: center;
  padding: 20rpx 0 5rpx 0;
}
.number .value {
  font-size: 16px;
}
.number .type{
  color: #ff4445;
}
.name {
  font-size: 16px;
  padding-bottom: 20rpx;
}
.options-box{
  margin: 0 -15px;
}
.options-item{
  border-top: 1px solid #f3f3f3;
  margin: 10rpx 0;
}
