/* pages/components/alert/index.wxss */
.mark{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.3);
}
.l-alert{
  background: #fff;
  position: absolute;
  top: 15%;
  bottom: 15%;
  left: 15%;
  right: 15%;
   transform: translateY(50%);  
  border-radius: 10px;
  padding: 10rpx 30rpx;
  opacity: 0;
}
.l-alert.active{
  transition: all 0.5s;
  opacity: 1;
  z-index: 1;
  transform: translateY(0); 
}