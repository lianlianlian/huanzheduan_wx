/* pages/class-mood-adjust/index.wxss */
.list {
  padding-bottom: 30rpx;
  background: #fff;
}
.item{
  padding: 0 30rpx;
}
.name {
  margin: 10rpx 0;
  font-size: 18px;
  font-weight: bold;
}
.video-box{
  position: relative;
  margin: 20rpx 0;
}
.video-box image {
  width: 100%;
  height: 380rpx;
}
.time-box{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 5rpx 15rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 45rpx;
  color: #fff;
  font-size: 12px;
}
.time-box image{
  width: 31rpx;
  height: 31rpx;
  margin-right: 20rpx;
}
